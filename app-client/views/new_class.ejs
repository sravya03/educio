<html>
<head>
  <title>Add Class</title>
  <link rel="stylesheet" href="/new_class.css" />
  <link rel="stylesheet" type="text/css" href="/jonthornton-jquery-timepicker/jquery.timepicker.css">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/jonthornton-jquery-timepicker/jquery.timepicker.js"></script>
</head>
<body>

	<%- include partials/sidebarClasses.ejs %>

	<div id="newClass" class="row">
		<h2 id="form-signin-heading">Add Class</h2>

		<form action="/newClass" method="post" class="simple-form">
			<label for="className">Class Name:</label>
    		<input type="text" id="className" class="form-control" name="className" required autofocus>
	    </form>

		<div id="classDates" class="col-md-">
    		<label for="classDates">Class Dates: </label>
    		<label class="checkbox-inline"><input type="checkbox" value="M">M</label>
			<label class="checkbox-inline"><input type="checkbox" value="T">T</label>
			<label class="checkbox-inline"><input type="checkbox" value="W">W</label>
			<label class="checkbox-inline"><input type="checkbox" value="Th">Th</label>
			<label class="checkbox-inline"><input type="checkbox" value="F">F</label>
		</div><br>

		<div id="classTime">
			<label for="className">Class Time: </label>
			
			<div class="input-group bootstrap-timepicker timepicker">
	            <input id="timepicker1" type="text" class="form-control input-small">
	            <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
	        </div>
	 
	        <script type="text/javascript">
	            jQuery('#timepicker1').timepicker();
	        </script>
	    </div><br>
	    
    	<button class="btn btn-lg btn-primary btn-block" type="submit">Add Class</button>
		</form>
	</div>
</body>
</html>